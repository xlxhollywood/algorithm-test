{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug C++ (Mac)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/a.out", // 생성된 실행 파일 경로
      "args": [],                           // 프로그램 실행 시 인수
      "stopAtEntry": false,                 // 프로그램 진입점에서 멈출지 여부
      "cwd": "${workspaceFolder}",          // 디버깅 작업 디렉토리
      "environment": [],
      "externalConsole": true,              // 외부 터미널 사용 여부
      "MIMode": "lldb",                     // 디버거: LLDB 사용
      "preLaunchTask": "build"              // 디버그 실행 전 빌드 작업 연결
    }
  ]
}
